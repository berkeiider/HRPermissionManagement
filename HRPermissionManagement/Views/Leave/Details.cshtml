@model HRPermissionManagement.Models.LeaveRequest
@{
    ViewData["Title"] = "İzin Detayı";
}

<div class="container mt-4">
    <div class="card" id="printableArea">
        <div class="card-header bg-light">
            <h3 class="text-center">İZİN TALEP FORMU</h3>
            <small class="d-block text-center text-muted">HR Permission Management System</small>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-6">
                    <strong>Personel:</strong> @Model.Employee?.Name @Model.Employee?.Surname<br>
                    <strong>Departman:</strong> @Model.Employee?.Department?.Name<br>
                    <strong>Email:</strong> @Model.Employee?.Email
                </div>
                <div class="col-6 text-right">
                    <strong>Talep Tarihi:</strong> @Model.RequestDate.ToString("dd.MM.yyyy")<br>
                    <strong>Durum:</strong>
                    @if (Model.Status == HRPermissionManagement.Models.LeaveStatus.Onaylandi)
                    {
                        <span class="text-success font-weight-bold">ONAYLANDI</span>
                    }
                    else if (Model.Status == HRPermissionManagement.Models.LeaveStatus.Reddedildi)
                    {

                        <span class="text-danger font-weight-bold">REDDEDİLDİ</span>
                    }
                    else
                    {

                        <span class="text-warning font-weight-bold">BEKLİYOR</span>
                    }
                </div>
            </div>

            <table class="table table-bordered">
                <tr>
                    <th width="30%">İzin Türü</th>
                    <td>@Model.LeaveType?.Name</td>
                </tr>
                <tr>
                    <th>Başlangıç Tarihi</th>
                    <td>@Model.StartDate.ToString("dd.MM.yyyy")</td>
                </tr>
                <tr>
                    <th>Bitiş Tarihi</th>
                    <td>@Model.EndDate.ToString("dd.MM.yyyy")</td>
                </tr>
                <tr>
                    <th>Toplam Gün</th>
                    <td>@Model.NumberOfDays Gün</td>
                </tr>
                <tr>
                    <th>Açıklama / Mazeret</th>
                    <td>@Model.Description</td>
                </tr>
            </table>

            <div class="row mt-5">
                <div class="col-6 text-center">
                    <p>Personel İmza</p>
                    <br><br>
                    __________________
                </div>
                <div class="col-6 text-center">
                    <p>Yönetici İmza</p>
                    <br><br>
                    __________________
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3 no-print">
        <button onclick="window.print()" class="btn btn-primary"><i class="fas fa-print"></i> Yazdır / PDF İndir</button>
        <a href="/Leave/Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>

<style>
    @@media print {
        .no-print, .main-sidebar, .main-header, .main-footer {
            display: none !important;
        }

        .content-wrapper {
            margin-left: 0 !important;
        }

        .card {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>