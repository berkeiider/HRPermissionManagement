@model List<HRPermissionManagement.Models.LeaveRequest>
@using HRPermissionManagement.Models

@{
    ViewData["Title"] = "İzin Geçmişleri";
}

<div class="bg-white/90 backdrop-blur-md rounded-2xl shadow-sm border border-brand-100 overflow-hidden animate-fade-in-up">
    <div class="px-8 py-6 border-b border-brand-50 bg-gradient-to-r from-brand-50/50 to-white flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div class="flex-shrink-0">
            <h3 class="text-xl font-black text-slate-800 flex items-center tracking-tight">
                <span class="bg-brand-100 p-2 rounded-lg mr-3 shadow-inner">
                    <i class="fas fa-history text-brand-600"></i>
                </span>
                İzin Geçmişleri Arşivi
            </h3>
            <p class="text-sm text-slate-500 mt-1 ml-12">Tamamlanan (Onaylanan/Reddedilen) Talepler</p>
        </div>
        
        <div class="flex items-center gap-3">
            <!-- Arama Formu -->
            <form action="/Leave/History" method="get" class="relative group w-full md:w-64">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-search text-slate-400 group-focus-within:text-brand-500 transition-colors"></i>
                </div>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                       class="block w-full pl-10 pr-4 py-2.5 text-sm leading-5 bg-white border border-slate-200 rounded-xl focus:ring-2 focus:ring-brand-500/20 focus:border-brand-500 outline-none transition-all shadow-sm group-hover:border-brand-300" 
                       placeholder="Personel veya Departman Ara...">
            </form>
        </div>
    </div>
    
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-100">
            <thead class="bg-slate-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Personel</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Departman</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">İzin Tipi</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Tarihler</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Gün</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Durum</th>
                    <th scope="col" class="px-6 py-3 text-right text-xs font-semibold text-slate-500 uppercase tracking-wider">Detay</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-100">
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center text-slate-500">
                            <p>Henüz arşivlenmiş (tamamlanmış) bir izin kaydı bulunmamaktadır.</p>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-bold text-slate-900">@item.Employee?.Name @item.Employee?.Surname</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">@item.Employee?.Department?.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">@item.LeaveType?.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                                @item.StartDate.ToString("dd.MM.yyyy") - @item.EndDate.ToString("dd.MM.yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 py-1 text-xs font-bold text-slate-700 bg-slate-100 rounded-lg border border-slate-200">
                                    @if(item.LeaveType != null && item.LeaveType.IsHourly)
                                    {
                                        <span>@((item.NumberOfDays * 9).ToString("0.##")) Saat</span>
                                    }
                                    else
                                    {
                                        <span>@item.NumberOfDays.ToString("0.##") Gün</span>
                                    }
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (item.Status == LeaveStatus.Onaylandi)
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 border border-green-200">ONAYLANDI</span>
                                }
                                else if (item.Status == LeaveStatus.Reddedildi)
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800 border border-red-200">REDDEDİLDİ</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="/Leave/Details/@item.Id" class="text-slate-400 hover:text-brand-600 bg-slate-50 hover:bg-brand-50 p-2 rounded-full transition-colors" title="Detay">
                                    <i class="fas fa-search"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>