@model List<HRPermissionManagement.Models.LeaveRequest>
@using HRPermissionManagement.Models

@{
    ViewData["Title"] = "İzinlerim";
}

<div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden mt-8">
    <div class="px-6 py-4 flex items-center justify-between border-b border-slate-100 bg-slate-50">
        <h3 class="text-lg font-bold text-slate-800 flex items-center">
            <i class="fas fa-history mr-2 text-brand-600"></i>
            Talep Ettiğiniz İzinler
        </h3>
        <a href="/Leave/Create" class="inline-flex items-center px-4 py-2 bg-slate-900 text-white text-sm font-semibold rounded-lg hover:bg-slate-800 transition duration-150 shadow-sm">
            <i class="fas fa-plus mr-2"></i> Yeni İzin Talebi
        </a>
    </div>
    
    <div class="overflow-x-auto">
        @if (Model == null || !Model.Any())
        {
            <div class="p-8 text-center text-slate-500">
                <div class="bg-slate-50 p-4 rounded-full inline-block mb-3">
                    <i class="fas fa-file-signature fa-3x text-brand-300"></i>
                </div>
                <p class="text-lg font-medium">Henüz bir izin talebiniz yok.</p>
                <p class="text-sm">Yeni bir izin talebi oluşturmak için yukarıdaki butonu kullanabilirsiniz.</p>
            </div>
        }
        else
        {
            <table class="min-w-full divide-y divide-slate-100">
                <thead class="bg-slate-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">İzin Tipi</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Tarihler</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Gün</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Talep Tarihi</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Durum</th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-semibold text-slate-500 uppercase tracking-wider">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-100">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">@(item.LeaveType?.Name ?? "-")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                                <div class="flex flex-col">
                                    <span class="font-medium">@item.StartDate.ToString("dd.MM.yyyy")</span>
                                    <span class="text-xs text-slate-400">@item.EndDate.ToString("dd.MM.yyyy")</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 py-1 text-xs font-bold text-slate-700 bg-slate-100 rounded-lg border border-slate-200">
                                    @if(item.LeaveType != null && item.LeaveType.IsHourly)
                                    {
                                        <span>@((item.NumberOfDays * 9).ToString("0.##")) Saat</span>
                                    }
                                    else
                                    {
                                        <span>@item.NumberOfDays.ToString("0.##") Gün</span>
                                    }
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@item.RequestDate.ToString("dd.MM.yyyy")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (item.Status == LeaveStatus.Onaylandi)
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 border border-green-200">Onaylandı</span>
                                }
                                else if (item.Status == LeaveStatus.Reddedildi)
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800 border border-red-200">Reddedildi</span>
                                }
                                else if (item.Status == LeaveStatus.YoneticiOnayladi)
                                {
                                    <div class="flex flex-col">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 border border-blue-200">Yönetici Onayladı</span>
                                        <span class="text-[10px] text-blue-600 mt-1 ml-1">(İK Onayı Bekliyor)</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800 border border-yellow-200">Bekliyor</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="/Leave/Details/@item.Id" class="text-brand-600 hover:text-brand-900 flex items-center justify-end" title="Detay">
                                    <span class="mr-1">Detay</span> <i class="fas fa-chevron-right text-xs"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>