@using HRPermissionManagement.Models
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Şifremi Unuttum | HR Yönetim</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/output.css">
</head>

<body class="font-sans antialiased h-screen overflow-hidden bg-slate-900 selection:bg-brand-500 selection:text-white">

    <div class="flex h-full w-full relative">

        <!-- Animated Background Elements -->
        <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
            <div
                class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] rounded-full bg-brand-500/20 blur-[120px] animate-pulse-slow">
            </div>
            <div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] rounded-full bg-rose-600/20 blur-[120px] animate-pulse-slow"
                style="animation-delay: 2s;"></div>
            <div
                class="absolute top-[40%] left-[40%] w-[20%] h-[20%] rounded-full bg-blue-500/10 blur-[80px] animate-bounce-slow">
            </div>
        </div>

        <!-- Left Section (Brand) -->
        <div class="hidden lg:flex w-1/2 relative z-10 flex-col justify-center items-center text-white p-12">
            <div
                class="bg-white/10 backdrop-blur-md p-8 rounded-3xl border border-white/10 shadow-2xl animate-fade-in-up">
                <div class="mb-8 text-transparent bg-clip-text bg-gradient-to-r from-brand-300 to-rose-300">
                    <i class="fas fa-shield-alt fa-5x filter drop-shadow-lg"></i>
                </div>
                <h1 class="text-5xl font-black mb-6 tracking-tighter leading-tight">
                    HESAP <span class="text-brand-400">GÜVENLİĞİ</span>
                </h1>
                <p class="text-xl text-slate-300 font-medium leading-relaxed max-w-md mx-auto text-center">
                    Şifrenizi güvenli bir şekilde sıfırlayın ve hesabınıza erişimi geri kazanın.
                </p>
            </div>
        </div>

        <!-- Right Section (Form) -->
        <div class="w-full lg:w-1/2 flex items-center justify-center relative z-10">
            <div class="w-full max-w-md px-8 py-10 m-4 bg-white/5 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/10 animate-fade-in-up"
                style="animation-delay: 200ms;">

                <div class="mb-8 text-center">
                    <h3 class="text-3xl font-bold text-white mb-2">Şifremi Unuttum</h3>
                    <p class="text-slate-400">E-posta adresinizi girin, size yardımcı olalım.</p>
                </div>

                @if (ViewBag.Success != null)
                {
                    <div
                        class="bg-emerald-500/20 border border-emerald-500/50 p-4 mb-6 rounded-xl backdrop-blur-sm animate-fade-in">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-check-circle text-emerald-400"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-emerald-200">@ViewBag.Success</p>
                            </div>
                        </div>
                    </div>
                }

                @if (ViewBag.Error != null)
                {
                    <div
                        class="bg-red-500/20 border border-red-500/50 p-4 mb-6 rounded-xl backdrop-blur-sm animate-fade-in">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-circle text-red-400"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-red-200">@ViewBag.Error</p>
                            </div>
                        </div>
                    </div>
                }

                <form action="/Account/ForgotPassword" method="post" class="space-y-6">
                    <div class="group">
                        <label for="email"
                            class="block text-sm font-medium text-slate-300 mb-2 group-focus-within:text-brand-400 transition-colors">E-Posta
                            Adresi</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i
                                    class="fas fa-envelope text-slate-500 group-focus-within:text-brand-400 transition-colors"></i>
                            </div>
                            <input type="email" name="email" id="email"
                                class="w-full pl-10 pr-4 py-3 rounded-xl bg-slate-800/50 border border-slate-700 text-white placeholder-slate-500 focus:bg-slate-800 focus:border-brand-500 focus:ring-2 focus:ring-brand-500/20 outline-none transition-all duration-200"
                                placeholder="ornek@sirket.com" required>
                        </div>
                    </div>

                    <button type="submit"
                        class="w-full bg-gradient-to-r from-brand-600 to-rose-600 hover:from-brand-500 hover:to-rose-500 text-white font-bold py-3 px-4 rounded-xl shadow-lg shadow-brand-600/30 hover:shadow-brand-600/50 transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center">
                        <span>Sıfırlama Linki Gönder</span>
                        <i class="fas fa-paper-plane ml-2 opacity-80"></i>
                    </button>
                </form>

                <div class="mt-8 text-center">
                    <a href="/Account/Login"
                        class="inline-flex items-center text-sm font-bold text-slate-400 hover:text-white transition-colors group">
                        <span
                            class="w-8 h-8 rounded-full bg-slate-800 flex items-center justify-center mr-2 group-hover:bg-slate-700 transition-colors">
                            <i class="fas fa-arrow-left text-xs"></i>
                        </span>
                        Giriş Ekranına Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>