@model List<HRPermissionManagement.Models.Department>

@{
    ViewData["Title"] = "Departmanlar";
}

<div
    class="bg-white/90 backdrop-blur-md rounded-2xl shadow-sm border border-brand-100 overflow-hidden animate-fade-in-up">
    <div
        class="px-8 py-6 border-b border-brand-50 bg-gradient-to-r from-brand-50/50 to-white flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div class="flex-shrink-0">
            <h3 class="text-xl font-black text-slate-800 flex items-center tracking-tight">
                <span class="bg-brand-100 p-2 rounded-lg mr-3 shadow-inner">
                    <i class="fas fa-building text-brand-600"></i>
                </span>
                Departman Listesi
            </h3>
            <p class="text-sm text-slate-500 mt-1 ml-12">Departmanların listesi ve yönetimi</p>
        </div>

        <div class="flex items-center gap-3">
            <!-- Arama Formu -->
            <form action="/Department/Index" method="get" class="relative group w-full md:w-64">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-search text-slate-400 group-focus-within:text-brand-500 transition-colors"></i>
                </div>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                    class="block w-full pl-10 pr-4 py-2.5 text-sm leading-5 bg-white border border-slate-200 rounded-xl focus:ring-2 focus:ring-brand-500/20 focus:border-brand-500 outline-none transition-all shadow-sm group-hover:border-brand-300"
                    placeholder="Departman Ara...">
            </form>

            <!-- Buton -->
            <a href="/Department/Create"
                class="inline-flex items-center justify-center px-5 py-2.5 bg-slate-900 text-white text-sm font-bold rounded-xl hover:bg-brand-600 transition-all duration-300 shadow-lg hover:shadow-brand-500/30 transform hover:-translate-y-0.5 whitespace-nowrap">
                <i class="fas fa-plus mr-2"></i> Yeni Departman Ekle
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="m-6 bg-red-50 border border-red-100 p-4 rounded-xl shadow-sm animate-fade-in">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-red-100 p-2 rounded-full">
                    <i class="fas fa-exclamation-triangle text-red-500"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-bold text-red-800">İşlem Başarısız</h3>
                    <p class="text-sm text-red-700 mt-1">@TempData["Error"]</p>
                </div>
            </div>
        </div>
    }

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-100">
            <thead class="bg-slate-50/50">
                <tr>
                    <th scope="col"
                        class="px-8 py-4 text-left text-xs font-bold text-slate-400 uppercase tracking-widest w-16">#
                    </th>
                    <th scope="col"
                        class="px-6 py-4 text-left text-xs font-bold text-slate-400 uppercase tracking-widest">
                        Departman Adı</th>
                    <th scope="col"
                        class="px-8 py-4 text-right text-xs font-bold text-slate-400 uppercase tracking-widest w-48">
                        İşlemler</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-50">
                @{
                    int siraNo = 0;
                }

                @foreach (var item in Model)
                {
                    siraNo++;

                    <tr class="hover:bg-brand-50/30 transition-all duration-200 group">
                        <td class="px-8 py-5 whitespace-nowrap text-sm font-bold text-brand-600">@siraNo</td>
                        <td
                            class="px-6 py-5 whitespace-nowrap text-sm font-bold text-slate-700 group-hover:text-brand-700 transition-colors">
                            @item.Name</td>
                        <td class="px-8 py-5 whitespace-nowrap text-right text-sm font-medium">
                            <div
                                class="opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex justify-end space-x-2">
                                <a href="/Department/Edit/@item.Id"
                                    class="text-slate-400 hover:text-brand-600 bg-white hover:bg-brand-50 p-2 rounded-lg border border-transparent hover:border-brand-100 transition-all shadow-sm"
                                    title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button onclick="confirmDelete(@item.Id, '@item.Name')"
                                    class="text-slate-400 hover:text-red-600 bg-white hover:bg-red-50 p-2 rounded-lg border border-transparent hover:border-red-100 transition-all shadow-sm"
                                    title="Sil">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function confirmDelete(id, name) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: `"${name}" departmanını silmek istediğinize emin misiniz?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#ef4444',
            cancelButtonColor: '#334155',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'İptal',
            background: '#fff',
            color: '#1e293b',
            iconColor: '#ef4444',
            customClass: {
                popup: 'rounded-2xl font-sans',
                confirmButton: 'rounded-xl px-4 py-2 font-bold',
                cancelButton: 'rounded-xl px-4 py-2 font-bold'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Department/Delete/' + id;
            }
        })
    }
</script>