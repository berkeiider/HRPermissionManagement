@model List<HRPermissionManagement.Models.Department>

@{
    ViewData["Title"] = "Departmanlar";
}

<div class="card mt-4">
    <div class="card-header">
        <h3 class="card-title">Departman Listesi</h3>
        <div class="card-tools">
            <a href="/Department/Create" class="btn btn-dark btn-sm">
                <i class="fas fa-plus"></i> Yeni Departman Ekle
            </a>
        </div>
    </div>
    <div class="card-body p-0">

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger m-3">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            </div>
        }

        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="width: 50px;">#</th>
                    <th>Departman Adı</th>
                    <th style="width: 200px;" class="text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int siraNo = 0;
                }

                @foreach (var item in Model)
                {
                    siraNo++; // Her satırda 1 artır

                    <tr>
                        <td class="font-weight-bold">@siraNo</td>

                        <td>@item.Name</td>

                        <td class="text-right">
                            <a href="/Department/Edit/@item.Id" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a href="/Department/Delete/@item.Id"
                               class="btn btn-outline-danger btn-sm"
                               onclick="return confirm('Bu departmanı silmek istediğinize emin misiniz?');">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>