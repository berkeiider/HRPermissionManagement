@model HRPermissionManagement.Models.Department

@{
    ViewData["Title"] = "Yeni Departman";
}

<div class="row mt-4">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yeni Departman Ekle</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">

                    <div class="mb-3">
                        <label class="form-label">Departman Adı</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Örn: Pazarlama" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Department/Index" class="btn btn-outline-secondary">İptal</a>
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>