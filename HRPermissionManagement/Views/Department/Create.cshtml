@model HRPermissionManagement.Models.Department

@{
    ViewData["Title"] = "Yeni Departman";
}

<div class="max-w-xl mx-auto mt-8">
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100 bg-slate-50">
            <h3 class="text-lg font-bold text-slate-800 flex items-center">
                <i class="fas fa-plus-circle mr-2 text-brand-600"></i>
                Yeni Departman Ekle
            </h3>
        </div>
        <div class="p-8">
            <form asp-action="Create" method="post" class="space-y-6">

                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-slate-700 mb-1">Departman Adı</label>
                    <input type="text" asp-for="Name"
                        class="block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-500 focus:ring focus:ring-brand-500 focus:ring-opacity-20 transition duration-150 ease-in-out sm:text-sm py-2 px-3"
                        placeholder="Örn: Pazarlama" required />
                    <span asp-validation-for="Name" class="text-sm text-red-500 mt-1 block"></span>
                </div>

                <div class="flex items-center justify-end pt-4 border-t border-slate-100">
                    <a href="/Department/Index"
                        class="mr-4 text-sm font-medium text-slate-600 hover:text-slate-800 transition-colors">
                        İptal
                    </a>
                    <button type="submit"
                        class="inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-bold rounded-md text-white bg-slate-900 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-900 transition-colors">
                        <i class="fas fa-save mr-2 mt-0.5"></i> Kaydet
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>