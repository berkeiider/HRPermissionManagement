@model HRPermissionManagement.Models.Department

@{
    ViewData["Title"] = "Departman Düzenle";
}

<div class="row mt-4">
    <div class="col-md-6 offset-md-3">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Departman Düzenle</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label">Departman Adı</label>
                        <input type="text" asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Departman Sorumlusu</label>
                        <select asp-for="ManagerId" class="form-control">
                            <option value="">-- Sorumlu Yok --</option>
                            @{
                                var calisanlar = ViewBag.Employees as List<HRPermissionManagement.Models.Employee> ?? new List<HRPermissionManagement.Models.Employee>();
                            }
                            @foreach (var emp in calisanlar)
                            {
                                <option value="@emp.Id">@emp.Name @emp.Surname</option>
                            }
                        </select>
                        <small class="text-muted">Listede sadece bu departmana kayıtlı personeller görünür.</small>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="/Department/Index" class="btn btn-outline-secondary">İptal</a>
                        <button type="submit" class="btn btn-info">Güncelle</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>